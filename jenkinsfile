pipeline { 
    agent any  
    stages { 
        stage('Build') { 
           steps { 
	       echo '1st stage'
               sh 'mvn -Dmaven.test.failure.ignore=true install'
           }
        }
	stage('Linux_Comand') {
	    steps {
		echo '2nd stage'
                sh 'mkdir /tmp/pipeline2'
	    }
	}
 	stage('Deploy') {
	    steps {
		echo "3rd stage"
		sh 'touch /tmp/pipeline2/abc.txt'
	    }
	}
    }
}
