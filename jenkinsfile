pipeline { 
    agent any  
    environment {
	PATH = "/home/ec2-user/apache-maven-3.8.5/bin:$PATH"
    }
    stages { 
        stage('Build') { 
           steps { 
	       echo '1st stage'
               sh 'mvn clean install'
           }
        }
	stage('Linux_Comand') {
	    steps {
		echo '2nd stage'
                sh 'mkdir /tmp/pipeline2'
	    }
	}
 	stage('Deploy') {
	    steps {
		echo "3rd stage"
		sh 'touch /tmp/pipeline2/abc.txt'
	    }
	}
    }
}
